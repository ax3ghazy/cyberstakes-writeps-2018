<%- include('base_top'); -%>
  <div class='appbody'>
    <h2>Billing</h2>
    <table>
      <tr>
        <th>Device ID</th>
        <th>Customer</th>
        <th>Cost</th>
        <th>Invoice Paid</th>
      </tr>
      <% db.forEach(function(item){ %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.customer %></td>
        <td><%= item.cost %></td>
        <td><%= item.paid %></td>
      </tr>
      <% }) %>
    </table>
  </div>
<%- include('base_bottom'); -%>